view,text{
  box-sizing:border-box;
}
page{
  --themeColor: #bda066;
  --globalColor: #1a1b1c;
  --focusColor: #4c4d4e;
  --descColor: #7e8081;
  --greyColor: #908f90;
  --subColor:#b0b1b4;
  --lightColor:#e4e3e4;
  --globalBgColor1:#e1e2e5;
  --globalBgColor2:#f7f6fa;
  --globalBgColor3: #ffffff
}

.pubTitle{
  text-align:center;
}
.pubTitle .en{
  font-size:86rpx;
  font-weight:900;
  text-transform:uppercase;
  color:var(--globalColor);
  opacity:0.1;
}
.pubTitle .cn{
  font-size:56rpx;
  font-weight:900;
  transform:translateY(-60rpx);
  color:var(--globalColor);
}
.pubTitle .line{
  width:100rpx;
  height:5rpx;
  background:var(--globalColor);
  opacity:0.5;
  display:inline-block;
  transform:translateY(-30rpx);
}